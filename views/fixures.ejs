<body>
  <%- include layouts/layout.ejs %>
  <div class="container">
    <fieldset>
      <form class="form-inline" action="/fixures" method="post">
        <div class="form-group">
          <label for="league">League:</label>
          <select name="leagueI">
              <option value="S"> La Liga </option>
              <option value="E"> English Premier League </option>
              <option value="F"> Ligue 1 </option>
              <option value="I"> Serie A </option>
          </select>
        </div>
        <div class="form-group">
          <label for="season">Season:</label>
          <input name="yearI" type="text" class="ghost-input" placeholder="Enter a Year" required>
        </div>
        <div class="form-group">
          <label for="date">Date:</label>
          <input type="date" name="dateI"></input>
        </div>
        <button type="submit" class="btn btn-default" value="Get Standings">Submit</button>
      </form>
      <% if(fix !== null){ %>
        <% if (fix.matches.length === 1) { %>
          <h1>There is no match on this date....</h1>
        <% } else {%>
        <table id="customers1">
            <tr>
              <th>Home</th>
              <th>time</th>
              <th>Away</th>
            </tr>
            <% for (var i = 0;i<fix.matches.length;i++) { %>
            <tr>
              <td><%= fix.matches[i].home %></td>
              <td><%= fix.matches[i].time %></td>
              <td><%= fix.matches[i].away %></td>
            </tr>
            <% } %>
        </table>
       <% } %>
    <% } %>

      <% if(error !== null){ %>
          <p><%= error %></p>
        <% } %>
    </fieldset>
  </div>
  <footer >
  <p class="down">Â© 2018 | All Right Reserved</p>
</footer>
</body>
